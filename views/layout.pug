block variables
doctype html
html
  head
    link(rel="shortcut icon", href="/favicon.ico")
    title 'Bcube'
    style
      include ../public/css/bootstrap.css
      include ../public/css/bootstrap.min.css
  body
    div.container.px-2.px-sm-3
      h1.h3='Bitcoin Cube'
      div.row
        div.col-md-4
          if (user)
              p.font-weight-bold User: <mark>#{user}</mark>
        div.col-md-4
          if (ip_external)
            p.font-weight-bold External IP: #{ip_external}
      div.row
        div.col-md-4
          if (password)
            p.font-weight-bold Password: <mark>#{password}</mark>
        div.col-md-4
          if (ip_internal)
            p.font-weight-bold Internal IP: #{ip_internal} 
      hr
      block content


