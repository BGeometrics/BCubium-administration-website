extends layout

block content
  div.row
    div.col-md-22
      div.container.px-2.px-sm-3
        div.row
          div.col-md-4
            div.card.mb-3.shadow-sm
              div.card-header
                if system_status.bitcoin == 'OK'
                  p.h2.h6.mb-0 Bitcoin   
                    img(src='/check-mark.ico')
                else
                  p.h2.h6.mb-0 Bitcoin
                    img(src='/no-check-mark.ico')
              div.card-body
                |
                a(class='rounded bg-primary text-white px-2 py-1' href="./bitcoin_enable") On 
                  img(src='/toggle_on.png')
                |
                |
                a(class='rounded bg-primary text-white px-2 py-1' href="./bitcoin_disable") Off 
                  img(src='/toggle_off.png')
                |
                |
                a(class='rounded bg-primary text-white px-2 py-1' href="./bitcoin_status") Status 
                |
                |
                br
                br
                |
                |
                a(class='rounded bg-primary text-white px-2 py-1' href="http://" + ip_internal + ":3002/node-status") Details
                br
                br
                p #{bitcoin_message}

          div.col-md-4
            div.card.mb-3.shadow-sm
              div.card-header
                if system_status.lnd == 'OK'
                  p.h2.h6.mb-0 LND  
                    img(src='/check-mark.ico')
