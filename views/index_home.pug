                a(class='rounded bg-primary text-white px-2 py-1' href="./lnd_stop")
                  img(src='/stop.png')
                |
                |
                a(class='rounded bg-primary text-white px-2 py-1' href="./lnd_status") Status
                |
                |
                br
                br
                |
                |
                a(class='rounded bg-primary text-white px-2 py-1'  href="./lnd_enable") On 
                  img(src='/toggle_on.png')
                |
                |
                a(class='rounded bg-primary text-white px-2 py-1' href="./lnd_disable") Off 
                  img(src='/toggle_off.png')
                br
                br
                p #{lnd_message}

          div.col-md-4
            div.card.mb-3.shadow-sm
              div.card-header
                if system_status.tor == 'OK'
                  p.h2.h6.mb-0 Tor 
                    img(src='/check-mark.ico')
