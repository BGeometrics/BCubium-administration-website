          |
          |
          a(class='rounded bg-primary text-white px-2 py-1' href="./openvpn_home") OpenVPN
          |
          |
          p #{openvpn_message}

      div.card.mb-4.shadow-sm
        div.card-header
          h2.h6 Utilities
        div.card-body
          a(class='rounded bg-primary text-white px-2 py-1' href="./backup") Backup
          |
          |
          a(class='rounded bg-primary text-white px-2 py-1' href="./wifi_home") Wifi
          |
          |
          a(class='rounded bg-primary text-white px-2 py-1' href="./port_home") Port redirect
          |
          |
          a(class='rounded bg-primary text-white px-2 py-1' href="./upnp_home") UPnP
          |
          |
          p #{usefull_message}

      div.card.mb-4.shadow-sm
        div.card-header
          h2.h6 Web Bcube
        div.card-body
          a(class='rounded bg-primary text-white px-2 py-1'  href="./webconfig_restart") Restart
          |
          |
          p #{webconfig_message}

