                a(class='rounded bg-primary text-white px-2 py-1' href="./rtl_stop")
                  img(src='/stop.png')
                |
                |
                a(class='rounded bg-primary text-white px-2 py-1' href="./rtl_status") Status
                |
                |
                br
                br
                |
                |
                a(class='rounded bg-primary text-white px-2 py-1' href="./rtl_enable") On 
                  img(src='/toggle_on.png')
                |
                |
                a(class='rounded bg-primary text-white px-2 py-1' href="./rtl_disable") Off 
                  img(src='/toggle_off.png')
                |
                |
                br
                br
                p #{rtl_message}

          div.col-md-4
            div.card.mb-3.shadow-sm
              div.card-header
                if system_status.btcrpcexplorer == 'OK'
                  a(class='nav-bar-brand' href="http://" + ip_internal + ":3002/")
                    p.h2.h6.mb-0 BTC-RPC-Explorer 
                      img(src='/check-mark.ico')
                else
                  a(class='nav-bar-brand' href="http://" + ip_internal + ":3002/")
                    p.h2.h6.mb-0 BTC-RPC-Explorer 
                      img(src='/no-check-mark.ico')
              div.card-body
                a(class='rounded bg-primary text-white px-2 py-1'  href="./btcrpcexplorer_start")
                  img(src='/start.png')
                |
                |
                a(class='rounded bg-primary text-white px-2 py-1' href="./btcrpcexplorer_stop")
                  img(src='/stop.png')
                |
                |
                a(class='rounded bg-primary text-white px-2 py-1' href="./btcrpcexplorer_status") Status
                |
                |
                br
                br
                |
                |
                a(class='rounded bg-primary text-white px-2 py-1' href="./btcrpcexplorer_enable") On 
                  img(src='/toggle_on.png')
                | 
                |
