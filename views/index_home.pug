                |
                a(class='rounded bg-primary text-white px-2 py-1' href="./tor_disable") Off 
                  img(src='/toggle_off.png')
                |
                |
                a(class='rounded bg-primary text-white px-2 py-1' href="./tor_status") Status
                br
                br
                |
                |
                p #{tor_message}

          div.col-md-4
            div.card.mb-3.shadow-sm
              div.card-header
                if system_status.rtl == 'OK'
                  a(class='nav-bar-brand' href="http://" + ip_internal + ":3003/")
                    p.h2.h6.mb-0 RTL 
                      img(src='/check-mark.ico')
                else
                  a(class='nav-bar-brand' href="http://" + ip_internal + ":3003/")
                    p.h2.h6.mb-0 RTL 
                      img(src='/no-check-mark.ico')
              div.card-body
                a(class='rounded bg-primary text-white px-2 py-1'  href="./rtl_start")
                  img(src='/start.png')
                |
