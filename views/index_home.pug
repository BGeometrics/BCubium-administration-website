      div.card.mb-4.shadow-sm
        div.card-header
          if system_status.openvpn == 'OK'
            h2.h6 VPN -> OK
          else
            h2.h6 VPN -> KO
        div.card-body
          a(class='rounded bg-primary text-white px-2 py-1'  href="./openvpn_start") Start
          |
          |
          a(class='rounded bg-primary text-white px-2 py-1' href="./openvpn_stop") Stop
          |
          |
          a(class='rounded bg-primary text-white px-2 py-1' href="./openvpn_status") Status
          |
          |
          a(class='rounded bg-primary text-white px-2 py-1' href="./openvpn_enable") Enable
