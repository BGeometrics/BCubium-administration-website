                p #{firewall_message}

          div.col-md-4
            div.card.mb-3.shadow-sm
              div.card-header
                if system_status.openvpn == 'OK'
                  p.h2.h6.mb-0 VPN 
                    img(src='/check-mark.ico')
                else
                  p.h2.h6.mb-0 VPN 
                    img(src='/no-check-mark.ico')
              div.card-body
                a(class='rounded bg-primary text-white px-2 py-1'  href="./openvpn_start")
                  img(src='/start.png')
                |
