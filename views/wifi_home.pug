block variables
doctype html
html
  head
    title 'Bitcoin Cube'
    style
      include ../public/css/bootstrap.css
      include ../public/css/bootstrap.min.css
  body
    h3.h3='Bitcoin Cube'
    div.container.px-2.px-sm-3
      h2.lead Wifi
      |
      a(class='rounded bg-primary text-white px-2 py-1' href="./wifi_scan") Scan
      br
      if networks != null
        each network in networks
          li Network SSID: #{network.ssid} Quality: #{network.quality}
      br

      if ssid == null
        form(method='POST' action='./wifi_connect')
          div
            label(for='name') Wifi ssid:
            input(name='ssid' value=ssid)
            br
            label(for='password') Wifi password:
            input(name='wifi_password' value=pass)
            br
            button(class='rounded bg-primary text-white px-2 py-1' type='submit') Connect
      else
        p Connect wifi #{ssid}
      p
      |
      a(class='rounded bg-primary text-white px-2 py-1' href="./") Home
    
