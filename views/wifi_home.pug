block variables
doctype html
html
  head
    title 'Bitcoin Cube'
    style
      include ../public/stylesheets/styling.css
      include ../public/stylesheets/fonts.css
      include ../public/stylesheets/bootstrap.min.css
      include ../public/stylesheets/highlight.min.css
  body
    h3.h3='Bitcoin Cube'
    h2.h6 Wifi
    |
    a(class='rounded bg-primary text-white px-2 py-1' href="./wifi_scan") Scan
    br

    if ssid == null
      form(method='POST' action='./wifi_connect')
        div
          label(for='name') Wifi net:
          input(name='ssid' value=net)
          br
          label(for='password') Wifi net:
          input(name='wifi_password' value=net)
          br
          button(class='rounded bg-primary text-white px-2 py-1' type='submit') Submit
    else
      p Connect wifi #{ssid}

    p
    |
    a(class='rounded bg-primary text-white px-2 py-1' href="./") Home
    
