extends layout_mini

block content
  div.container.px-2.px-sm-3
    div.row
      div.col-md-3
        if (user)
          p.font-weight-bold User: <mark>#{user}</mark>
      div.col-md-3
        if (password)
          p.font-weight-bold Pass: <mark>#{password}</mark>

    div.row
      div.col-md-9
        div.container.px-2.px-sm-3
          div.card.mb-4.shadow-sm
            div.card-header
              if backup_message
                p.h2.h6.mb-0 Backup done
              else
                p.h2.h6.mb-0 Backup not done
            div.card-body
              if backup_message 
                div.card-body
                  a(class='rounded bg-primary text-white px-2 py-1' href=backup_message, target='_blank') Download backup
                  | &nbsp;

      div.col-md-3
        div.container.px-2.px-sm-3
          div.card.mb-4.shadow-sm
            div.card-header
              h2.h6 Help
            div.card-body
