extends layout_mini

block content
  div(class="card mb-4 shadow-sm")
    br
    div.col-md-12
      div.container.px-2.px-sm-3
        div.row
          div.col-md-9
            div.container.px-2.px-sm-3
              div.card.mb-4.shadow-sm
                div.card-body
                  if opreturn_message 
                    p Blockchain text message: <b>#{opreturn_message}</b>
                    p Blockchain hex. message: #{opreturn_data} 

                  if txids
                    div(class="table-responsive")
                      table(class="table text-left mb-5 mb-lg-0")
                        thead
                          tr
                            th Transactions
                            th
                          tbody
                            each txid in txids
                              tr(class="monospace")
                                td
                                  a(class='rounded bg-primary text-white px-2 py-1' href="./bitcoin_opreturn_show_message?txid=" + txid.txid) Show
                                td 
                                  - var url='https://www.blockchain.com/es/btc/tx/' + txid.txid
                                  a(class='rounded bg-primary text-white px-2 py-1' href=url) #{txid.txid}
                    br
                    if bitcoin_message
                        p(style="color:red;") #{bitcoin_message}
                    
          div.col-md-3
            div.container.px-2.px-sm-3
              div.card.mb-4.shadow-sm
                div.card-header
                  h2.h6 Help
                div.card-body
                  p XXX

