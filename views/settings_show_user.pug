extends layout_mini

block content
  div(class="card mb-4 shadow-sm")
    br
    div.col-md-12
      div.container.px-2.px-sm-3
        div.row
          div.col-md-9
            div.container.px-2.px-sm-3
              div.card.mb-4.shadow-sm
                div.card-header
                  p.h2.h6.mb-0 Save the credentials
                div.card-body
                  div.col-md-5
                    if (user)
                      p.font-weight-bold User: 
                        input(type="text" id="myUser" name="user" value="user" style="border: none;" readonly)
                        |
                  div.col-md-5
                    if (password)
                      p.font-weight-bold Pass: 
                        input(type="text" name="password" value="password" style="border: none;" readonly)

                  div.col-md-5
                    a(class='rounded bg-primary text-white px-2 py-1' href="./web_security_activate" title='Option to activate authentication in the configuration web') Authentication web on

          div.col-md-3
            div.container.px-2.px-sm-3
              div.card.mb-4.shadow-sm
                div.card-header
                  h2.h6 Do you know...?
                div.card-body
                  p You are going to activate the authentication to access the configuration web you have to remember or save the user and the password
